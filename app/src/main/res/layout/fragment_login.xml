<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    tools:context=".ui.login.LoginFragment">

    <ScrollView
        android:id="@id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/white"
        android:fillViewport="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Welcome back !"
                android:textSize="22dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/ic_auth_main" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccp_countryCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:elevation="5dp"
                    app:ccpDialog_backgroundColor="@color/white" />

                <!--Book Name-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/mobileTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ccp_countryCode"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/text4"
                    android:backgroundTint="@color/color_primary"
                    android:theme="@style/TextLabel"
                    app:boxBackgroundColor="@color/color_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/color_primary"
                        android:hint="Enter Your Mobile Number"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:textColor="@color/text"
                        android:textColorHint="@color/black"
                        android:textColorHighlight="@color/black"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <!--  <EditText
                      android:id="@+id/ed_mobile"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_below="@id/ccp_countryCode"
                      android:layout_marginTop="10dp"
                      android:inputType="phone"
                      android:maxLines="1"
                      android:textColor="@color/text"
                      android:backgroundTint="@color/color_primary"
                      android:hint="Enter Your Mobile Number" />-->

                <!--Book Name-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    android:layout_below="@id/mobileTextLayout"
                    android:backgroundTint="@color/color_primary"
                    android:theme="@style/TextLabel"
                    app:boxBackgroundColor="@color/color_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/color_primary"
                        android:hint="Enter Your Password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textColor="@color/text"
                        android:textColorHint="@color/text2" />

                </com.google.android.material.textfield.TextInputLayout>


                <!--<EditText
                    android:id="@+id/ed_password"
                    android:layout_below="@id/mobileTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:maxLines="1"
                    android:textColor="@color/text"
                    android:backgroundTint="@color/color_primary"
                    android:hint="Enter Your Password"
                    android:inputType="textPassword"
                     />-->


                <!--Forgot password-->
                <TextView
                    android:id="@+id/txt_forgot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/passwordTextLayout"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:text="Forgot Password ?  "
                    android:textColor="@color/color_primary" />


                <TextView
                    android:id="@+id/terms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/passwordTextLayout"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:text="By login, you agree to our Terms and Policy" />

                <Button
                    android:id="@+id/btn_singin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/terms"
                    android:layout_margin="20dp"
                    android:background="@drawable/button_background_primary"
                    android:text="Sign in"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_below="@id/btn_singin"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Don't have an account? " />

                    <TextView
                        android:id="@+id/btn_signup"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="Sign up"
                        android:textColor="@color/color_primary"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:theme="@style/progressColor"
        android:visibility="invisible" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>




