<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutBackground"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:clickable="true"
    android:clipToPadding="false"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="13dp">


    <!--name-->
    <TextView
        android:id="@+id/bookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"

        android:fontFamily="@font/circularstd_medium"
        android:singleLine="true"

        android:text="Book Name"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="@font/circularstd_medium" />

    <!--Prize-->
    <LinearLayout
        android:id="@+id/LLay_homeCityBook_bookPrize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookName"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <!--selling-->
        <TextView
            android:id="@+id/sellingPrize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="50"
            android:textColor="?attr/colorPrimaryVariant"
            android:textSize="17dp" />

        <!--Original-->
        <TextView
            android:id="@+id/originalPrize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="100"
            android:textColor="@color/text3"
            android:textSize="14dp" />


    </LinearLayout>

    <!--Location-->
    <LinearLayout
        android:id="@+id/itemHomeBook_layoutLinear_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LLay_homeCityBook_bookPrize"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/live_location_red" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemHomeBook_TV_distance"
            android:layout_marginLeft="5dp"
            android:hint="location"
            android:textColor="@color/text"
            android:textSize="16dp">

        </TextView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        app:cardCornerRadius="7dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:background="@color/text"
            android:scaleType="centerCrop"
            android:src="@drawable/home_bg_book" />

    </androidx.cardview.widget.CardView>


</RelativeLayout>