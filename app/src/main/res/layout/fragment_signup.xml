<?xml version="1.0" encoding="utf-8"?>


<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2E2E2"
    tools:context=".ui.signup.SignUpFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/white"
        android:fillViewport="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Let's create  your \naccount"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="220dp"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_auth_main" />
            </LinearLayout>

            <!--Linear 2-->
            <LinearLayout
                android:id="@+id/linarLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayout1"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp"
                    android:textColor="@color/text4"
                    android:gravity="center"
                    android:text="Please Enter Correct Phone Number \n So that you can contact with other users" />
                <!--Book Name-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nameTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/color_primary"
                    android:theme="@style/TextLabel"
                    app:boxBackgroundColor="@color/color_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/color_primary"
                        android:hint="Enter Your Name Here"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:textColor="@color/text"
                        android:textColorHint="@color/text2" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- <EditText
                     android:id="@+id/et_name"
                     style="@style/modifiedEditText"
                     android:hint="Enter Your Name Here"
                     android:inputType="textPersonName"
                     android:maxLines="1" />-->

                <LinearLayout
                    android:id="@+id/mobileLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/ccp_countryCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom" />

                    <!--Book Name-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/mobileTextLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/color_primary"
                        android:theme="@style/TextLabel"
                        app:boxBackgroundColor="@color/color_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/color_primary"
                            android:hint="Enter Your Phone number"
                            android:inputType="phone"
                            android:layout_gravity="start"
                            android:maxLines="1"
                            android:textColor="@color/text"
                            android:textColorHint="@color/text2" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!--<EditText
                        android:id="@+id/et_mobile"
                        style="@style/modifiedEditText"
                        android:layout_marginTop="0dp"
                        android:hint="Enter Your Phone number"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:minWidth="200dp" />-->
                </LinearLayout>

                <!--Book Name-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mobileLinearLayout"
                    android:backgroundTint="@color/color_primary"
                    android:theme="@style/TextLabel"
                    app:boxBackgroundColor="@color/color_primary"
                    app:passwordToggleEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/color_primary"
                        android:hint="Enter Your Password Here"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textColor="@color/text"
                        android:textColorHint="@color/text2" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- <com.google.android.material.textfield.TextInputLayout
                     android:id="@+id/pass"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:backgroundTint="@color/color_primary"
                     app:boxBackgroundColor="@color/color_primary"
                     app:counterTextColor="@color/color_primary"
                     app:passwordToggleEnabled="true">

                     <EditText
                         android:id="@+id/et_password"
                         style="@style/modifiedEditText"
                         android:hint="Enter Your Password Here"
                         android:inputType="textPassword"
                         android:maxLines="1" />

                 </com.google.android.material.textfield.TextInputLayout>-->

                <!--Book Name-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emialTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mobileLinearLayout"
                    android:backgroundTint="@color/color_primary"
                    android:theme="@style/TextLabel"
                    app:boxBackgroundColor="@color/color_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/color_primary"
                        android:hint="Enter Your Email Here"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:textColor="@color/text"
                        android:textColorHint="@color/text2" />

                </com.google.android.material.textfield.TextInputLayout>
                <!--<EditText
                    android:id="@+id/ed_email"
                    style="@style/modifiedEditText"
                    android:layout_marginTop="7dp"
                    android:hint="Enter your email here"
                    android:inputType="textEmailAddress"
                    android:maxLines="1" />-->


                <TextView
                    android:id="@+id/terms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="By signing up, you agree to our Terms and Policy" />

                <Button
                    android:id="@+id/btn_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/terms"
                    android:layout_margin="20dp"
                    android:background="@drawable/button_background_primary"
                    android:text="Register"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/parent"
                        android:text="@string/alreadyHaveAccout"
                        android:textColor="@color/text2"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/signInTv"
                        style="@style/parent"
                        android:layout_marginLeft="5dp"
                        android:text="@string/signup_login_hint"
                        android:textColor="@color/color_primary"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:theme="@style/progressColor"
        android:visibility="invisible" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>




