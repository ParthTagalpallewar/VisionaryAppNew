<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.manualLocation.ManualLocation">


    <LinearLayout
        android:id="@+id/slm_layout_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cancelBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:src="@drawable/cancel" />

        <TextView
            android:id="@+id/slm_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Location"
            android:textColor="@color/black"
            android:textSize="25dp" />


    </LinearLayout>

    <View
        android:id="@+id/slm_view_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/slm_layout_head"
        android:background="#BDB5B5" />


    <LinearLayout
        android:id="@+id/slm_layout_pincode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/slm_view_view"
        android:orientation="horizontal"
        android:weightSum="5">

        <!--Book Name-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mobileTextLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ccp_countryCode"
            android:layout_marginTop="10dp"
            android:layout_weight="5"
            android:backgroundTint="@color/color_primary"
            android:theme="@style/TextLabel"
            app:boxBackgroundColor="@color/color_primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pinCodeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/color_primary"
                android:hint=" Enter your Pin code here"
                android:inputType="phone"
                android:maxLines="1"
                android:textSize="18dp"
                android:textColor="@color/text"
                android:textColorHint="@color/text2" />

        </com.google.android.material.textfield.TextInputLayout>

      <!--  <EditText
            android:id="@+id/pinCodeEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:hint=" Enter your Pin code here"
            android:textColor="@color/text"
            android:inputType="phone"
            android:backgroundTint="?attr/colorPrimaryVariant"
            android:hint=" Enter your Pin code here"
            android:singleLine="true"
            android:textSize="18dp" />-->

        <Button
            android:id="@+id/pinCodeSearchBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_primary"
            android:text="Search"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>

    <View
        android:id="@+id/slm_view_view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/slm_layout_pincode"
        android:layout_marginTop="10dp"
        android:background="#BDB5B5" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/slm_view_view2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        tools:listitem="@layout/item_location_pincode" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal|center_vertical"
        android:backgroundTint="@color/color_primary"
        android:theme="@style/progressColor"
        android:visibility="invisible" />

</RelativeLayout>