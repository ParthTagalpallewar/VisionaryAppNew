<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.homeCategory.AllCategoriesFragment">

    <!--   <com.google.android.material.appbar.AppBarLayout
           android:layout_width=""
           android:layout_height=""-->

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/addBook_card_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:cardElevation="10.05dp">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/addBook_tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/text"
            app:title="Select Category" />


    </com.google.android.material.appbar.AppBarLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/item_home_category" />


</LinearLayout>